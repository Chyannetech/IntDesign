<h1><%= @product.name %></h1>
<p> <%= @product.body %></p>
<p> <%= @product.price %></p>
<ul>
    <li><%= link_to "Edit Item", edit_product_path(@product) %></li>
    <li><%= link_to "Delete Item", product_path(@product), data: {
        turbo_method: :delete, 
        turbo_confirm: "Are you sure?"
    }%></li>
<ul>
<h3>Reviews</h3>
<%= render @product.comments %>

<h3>Add a review:</h3>
<%= form_with model: [ @product, @product.comments.build] do |form| %>
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
    <%= form.label :review %><br>
    <%= form.text_area :body %>
    </p>
    <p>
    <%= form.submit %>
    </p>
    <% end %>

